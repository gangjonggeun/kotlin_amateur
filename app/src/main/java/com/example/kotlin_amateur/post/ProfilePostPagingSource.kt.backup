class ProfilePostPagingSource(
    private val context: Context,
    private val profilePostRepository: ProfilePostRepository,
    private val postListType: PostListType
) : PagingSource<Int, PostListResponse>() {

    companion object {
        private const val TAG = "ProfilePostPagingSource"
        private const val STARTING_PAGE_INDEX = 0
    }

    override suspend fun load(params: LoadParams<Int>): LoadResult<Int, PostListResponse> {
        return try {
            val page = params.key ?: STARTING_PAGE_INDEX
            val pageSize = params.loadSize

            Log.d(TAG, "ğŸ”¥ í”„ë¡œí•„ ë°ì´í„° ë¡œë”© ì‹œì‘ - íƒ€ì…: ${postListType.displayName}, í˜ì´ì§€: $page, í¬ê¸°: $pageSize")

            // ğŸ¯ í”„ë¡œí•„ íƒ€ì…ë³„ API í˜¸ì¶œ
            val result = when (postListType) {
                PostListType.MY_POSTS -> {
                    Log.d(TAG, "ğŸ“ ë‚´ ê²Œì‹œê¸€ ë¡œë”©")
                    profilePostRepository.getMyPosts(context, page, pageSize)
                }
                
                PostListType.LIKED_POSTS -> {
                    Log.d(TAG, "â¤ï¸ ì¢‹ì•„ìš”í•œ ê¸€ ë¡œë”©")
                    profilePostRepository.getLikedPosts(context, page, pageSize)
                }
                
                PostListType.RECENT_VIEWED -> {
                    Log.d(TAG, "ğŸ‘€ ìµœê·¼ ë³¸ ê¸€ ë¡œë”©")
                    profilePostRepository.getRecentViewedPosts(context, page, pageSize)
                }
                
                PostListType.HOME -> {
                    Log.e(TAG, "âŒ HOME íƒ€ì…ì€ ProfilePostPagingSourceì—ì„œ ì§€ì›í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤")
                    ApiResult.Error(400, "HOME íƒ€ì…ì€ PostPagingSourceë¥¼ ì‚¬ìš©í•˜ì„¸ìš”")
                }
            }

            // ğŸ” ê²°ê³¼ ì²˜ë¦¬
            when (result) {
                is ApiResult.Success -> {
                    val posts = result.data
                    Log.d(TAG, "âœ… ë¡œë”© ì„±ê³µ - ${posts.size}ê°œ ì•„ì´í…œ (${postListType.displayName})")

                    // ğŸ¯ í˜ì´ì§• í‚¤ ê³„ì‚°
                    val prevKey = if (page == STARTING_PAGE_INDEX) null else page - 1
                    val nextKey = if (posts.isEmpty() || posts.size < pageSize) {
                        null // ë” ì´ìƒ ë°ì´í„° ì—†ìŒ
                    } else {
                        page + 1
                    }

                    LoadResult.Page(
                        data = posts,
                        prevKey = prevKey,
                        nextKey = nextKey
                    )
                }
                
                is ApiResult.Error -> {
                    Log.e(TAG, "âŒ ë¡œë”© ì‹¤íŒ¨ [${result.code}] - ${result.message} (${postListType.displayName})")
                    
                    // ğŸ›¡ï¸ ë©”ëª¨ë¦¬ ì•ˆì „: Exception ëŒ€ì‹  ê²½ëŸ‰ ì—ëŸ¬ ì²˜ë¦¬
                    LoadResult.Error(
                        RuntimeException("í”„ë¡œí•„ ê²Œì‹œê¸€ ë¡œë”© ì‹¤íŒ¨: ${result.message}")
                    )
                }
                
                is ApiResult.Loading -> {
                    Log.w(TAG, "âš ï¸ ì˜ˆìƒì¹˜ ëª»í•œ ë¡œë”© ìƒíƒœ (${postListType.displayName})")
                    LoadResult.Error(
                        RuntimeException("ë¡œë”© ìƒíƒœ ì˜¤ë¥˜: ${result.message}")
                    )
                }
            }

        } catch (e: Exception) {
            Log.e(TAG, "ğŸ’¥ í”„ë¡œí•„ ê²Œì‹œê¸€ ë¡œë”© ì˜ˆì™¸ (${postListType.displayName})", e)
            
            // ğŸ›¡ï¸ ë©”ëª¨ë¦¬ ì•ˆì „: ê°€ë²¼ìš´ ì—ëŸ¬ ë©”ì‹œì§€
            LoadResult.Error(
                RuntimeException("í”„ë¡œí•„ ë°ì´í„° ë¡œë”© ì˜¤ë¥˜: ${e.message?.take(100) ?: "ì•Œ ìˆ˜ ì—†ëŠ” ì˜¤ë¥˜"}")
            )
        }
    }

    /**
     * ğŸ”„ ìƒˆë¡œê³ ì¹¨ ì‹œ í‚¤ ê³„ì‚°
     * - í˜„ì¬ ìœ„ì¹˜ ê¸°ì¤€ìœ¼ë¡œ ì ì ˆí•œ í˜ì´ì§€ ë°˜í™˜
     */
    override fun getRefreshKey(state: PagingState<Int, PostListResponse>): Int? {
        return state.anchorPosition?.let { anchorPosition ->
            val anchorPage = state.closestPageToPosition(anchorPosition)
            anchorPage?.prevKey?.plus(1) ?: anchorPage?.nextKey?.minus(1)
        }.also { refreshKey ->
            Log.d(TAG, "ğŸ”„ ìƒˆë¡œê³ ì¹¨ í‚¤: $refreshKey (${postListType.displayName})")
        }
    }
}
